[user]
	name = Arinc Elhan
	email = elhanarinc@gmail.com
[alias]
  # Show branch tree in a nice way
	lg2 = log --color --graph --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	lg3 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
	lg = log --graph --abbrev-commit --decorate --format=format:'%C(red)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(bold blue)<%an> -%C(reset) %C(white)%s%C(reset) ' 
	lg1 = log --graph --abbrev-commit --decorate --format=format:'%C(ul yellow)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(bold blue)<%an> -%C(reset) %C(white)%s%C(reset) %n%b' --patch --minimal --stat 

	aa = add -u
	st = status -sb
	dcs = diff
	dsh = diff --staged
	dch = diff HEAD
    dni = diff --no-index
	dcst = difftool
	dsht = difftool --staged
	dcht = difftool HEAD
	unstage = reset HEAD --
	rsth = reset --hard HEAD
	rsts = checkout -- .
    addall = add -A
    addmodified = add -u
	co = checkout
	mg = merge --edit --no-ff
	tree = log --oneline --decorate --all --graph
    remotedelete = push origin --delete

[core]
	excludesfile = ~/.gitignore
	pager = less
	editor = vim
[color]
	ui = true

# current - push the current branch to a branch of the same name.
[push]
	default = current

# Put this file into your home directory

[diff]
	#external = "~/bin/git_difftool"
	tool = vimdiff
[difftool]
	prompt = false
#	tool = vimdiff
